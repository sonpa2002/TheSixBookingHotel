@model List<CustomerReport>

@{
    ViewData["Title"] = "CustomerReport List";
    Layout = "~/Views/Shared/GetHotels_Layout.cshtml";
}
<style>
    .customerReport-list-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 20px;
        padding-bottom: 20px;
        width: 100%;
        overflow-x: scroll;
    }

    .customerReport-list-title {
        color: #7fc142;
        font-size: 45px;
        margin: 25px;
        font-weight: 600;
    }

    .customerReport-list-table {
        width: 100%;
        border-collapse: collapse;
        margin: 0 auto;
    }

        .customerReport-list-table th,
        .customerReport-list-table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ccc;
        }

        .customerReport-list-table th {
            background-color: #4CAF50;
            color: white;
        }

        .customerReport-list-table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .customerReport-list-table tbody tr:hover {
            background-color: #f5f5f5;
        }

    .customerReport-list-button {
        display: inline-block;
        padding: 8px 12px;
        background-color: #4CAF50;
        color: white;
        text-align: center;
        font-size: 14px;
        cursor: pointer;
        border: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

        .customerReport-list-button:hover {
            background-color: #45a049;
        }
</style>

<div class="customerReport-list-container">
    <h1 class="customerReport-list-title">CustomerReport List</h1>
    <table class="customerReport-list-table">
        <thead>
            <tr>
                <th style="width:10vw;">ReportID</th>
                <th style="width:10vw;">CustomerID</th>
                <th>CustomerName</th>
                <th>CustomerEmail</th>
                <th>CustomerPhone</th>
                <th style ="width:40vw; text-align:center;">Content</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var CustomerReport in Model)
            {
                <tr>
                    <td>@CustomerReport.ReportID</td>
                    <td>@CustomerReport.CustomerID</td>
                    <td>@CustomerReport.CustomerName</td>
                    <td>@CustomerReport.CustomerEmail</td>
                    <td>@CustomerReport.CustomerPhone</td>
                    <td>@CustomerReport.Content</td>
                </tr>
            }
        </tbody>
    </table>
</div>